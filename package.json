{
  "name": "ssb-tribes2",
  "version": "0.1.0",
  "description": "SSB private groups with ssb-db2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ssbc/ssb-tribes2.git"
  },
  "bugs": {
    "url": "https://github.com/ssbc/ssb-tribes2/issues"
  },
  "homepage": "https://github.com/ssbc/ssb-tribes2#readme",
  "author": "Andre Staltz <contact@staltz.com>",
  "contributors": [
    "Jacob Karlsson <jacob.karlsson95@gmail.com>"
  ],
  "license": "LGPL-3.0",
  "keywords": [
    "ssb"
  ],
  "engines": {
    "node": ">=12"
  },
  "main": "index.js",
  "files": [
    "package.json.license",
    "LICENSES/*",
    "*.js"
  ],
  "dependencies": {
    "pull-stream": "^3.6.14",
    "ssb-box2": "^2.0.2",
    "ssb-db2": ">=5",
    "ssb-meta-feeds": "~0.30.0"
  },
  "devDependencies": {
    "c8": "^7.11.3",
    "husky": "4.3",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "ssb-db2": "^6.2.0",
    "tap-arc": "^0.3.4",
    "tape": "^5.5.3"
  },
  "scripts": {
    "test": "tape test/*.js | tap-arc --bail",
    "format-code": "prettier --write \"*.js\"",
    "format-code-staged": "pretty-quick --staged --pattern \"*.js\"",
    "coverage": "c8 --reporter=lcov npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format-code-staged"
    }
  }
}
